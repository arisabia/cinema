@model IEnumerable<Movie>

@{ ViewBag.NumMovie = Model.Count();}

@if (User.IsInRole("Administrator"))
{
    <div>
        <a asp-action="Create">New Movie</a>
    </div>
}


<table class=" table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Length</th>
            <th>Type</th>
            <th>ReleaseDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Length</td>
                <td>@item.Type</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td># Films</td>
            <td></td>
            <td></td>
            <td></td>
            <td>@ViewBag.NumMovie</td>
        </tr>
    </tfoot>
</table>